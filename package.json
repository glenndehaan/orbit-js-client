{
  "name": "orbit-js-client",
  "version": "1.2.0",
  "description": "The orbit telemetry client for JavaScript",
  "main": "./src/index.js",
  "scripts": {
    "start": "nodemon --watch src --exec 'npm run lint && node ./debug/server.js'",
    "lint": "eslint -c ./package.json ./src"
  },
  "author": {
    "name": "Glenn de Haan",
    "email": "glenn@dehaan.cloud",
    "url": "https://glenndehaan.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/glenndehaan/orbit-js-client.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "indent": [
        "error",
        4
      ]
    },
    "extends": [
      "eslint:recommended"
    ]
  },
  "eslintIgnore": [
    "*.test.js"
  ],
  "dependencies": {
    "node-fetch": "^3.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.7.2",
    "nodemon": "^2.0.2"
  }
}
